<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <changeSet author="jmiranda" id="1756677320776-1">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="order_item" columnName="container_location_id"/>
            </not>
        </preConditions>

        <addColumn tableName="order_item">
            <column name="container_location_id" type="CHAR(38)"/>
        </addColumn>
    </changeSet>

    <changeSet author="jmiranda" id="1756677320776-2">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_order_item_container_location"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint
                baseColumnNames="container_location_id"
                baseTableName="order_item"
                constraintName="fk_order_item_container_location"
                deferrable="false"
                initiallyDeferred="false"
                referencedColumnNames="id"
                referencedTableName="location"
        />
    </changeSet>
</databaseChangeLog>
