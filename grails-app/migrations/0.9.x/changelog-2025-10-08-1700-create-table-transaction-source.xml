                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

    <!-- Create table transaction_source -->
    <changeSet author="kchelstowski" id="081020251700-0">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="transaction_source"/>
            </not>
        </preConditions>

        <createTable tableName="transaction_source">
            <column name="id" type="CHAR(38)">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="transaction_action" type="VARCHAR(50)">
                <constraints nullable="false" />
            </column>
            <column name="shipment" type="CHAR(38)"/>
            <column name="requisition" type="CHAR(38)"/>
            <column name="receipt" type="CHAR(38)"/>
            <column name="order" type="CHAR(38)"/>
            <column name="cycle_count" type="CHAR(38)"/>
            <column name="origin" type="CHAR(38)"/>
            <column name="destination" type="CHAR(38)"/>
            <column name="date_created" type="DATETIME">
                <constraints nullable="false" />
            </column>
            <column name="last_updated" type="DATETIME">
                <constraints nullable="false" />
            </column>
            <column name="created_by_id" type="CHAR(38)">
                <constraints nullable="false" />
            </column>
            <column name="updated_by_id" type="CHAR(38)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet author="kchelstowski" id="081020251700-1">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_transaction_source_shipment"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint
                baseColumnNames="shipment"
                baseTableName="transaction_source"
                constraintName="fk_transaction_source_shipment"
                deferrable="false"
                initiallyDeferred="false"
                referencedColumnNames="id"
                referencedTableName="shipment"
        />
    </changeSet>

